<!DOCTYPE html>
<html>
  <head>
    <title>TravelApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <style>
    .navbar {
      font-family: 'Comic Sans MS';'
    }
    </style>
    <% if session[:user_id] %>
      <div class="navbar">

        <a class="img button" href="/"><img src="/travelbug2_full.svg" width="25px"></a>
        <div class="dropdown">
          <button class="dropbtn">Trips
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content">
            <a href="/trips">Browse Trips</a>
            <a href="/trips/new">New Trip</a>
            <a href="/users/<%=session[:user_id]%>">My Trips</a>
          </div>
        </div>
        <a href="/destinations">Desintations</a>
        <a href="/logout" style="float: right;">Logout</a>
        <a href="/users/<%=session[:user_id]%>" style="float: right;">My Profile</a>
      </div>
    <% else %>
      <div class="navbar">
        <a class="img button" href="/"><img src="/travelbug2_full.svg" width="25px"></a>
        <a href="/signup" style="float: right;">Sign Up</a>
        <a href="/login" style="float: right;">Login</a>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
