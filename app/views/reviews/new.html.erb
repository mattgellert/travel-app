<h1>Add a New Review</h1>
<%= form_for [@trip, @review],url: {controller: 'reviews', action: 'create'} do |f| %>
<%= f.label :comment %>
<%= f.text_field :comment %>
<br>
<%= f.label :vote %> <br>
<%= f.radio_button :vote, "1"%> Upvote <br>
<%= f.radio_button :vote, "-1"%> Downvote <br>
<br>
<%= f.submit %>
<% end %>
