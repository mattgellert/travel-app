<h1 align="center">Sign Up<img class="header-logo" src="/travelbug3_hollow_blackish.svg" width="15px"></h1>

<%= form_for @user, html: {class: "form-style-8"} do |f|%>

<%= f.label :name, style: "font-weight:bold" %>
<%= f.text_field :name %>

<br>

<%= f.label :password, style: "font-weight:bold" %>
<%= f.password_field :password%>

<br>

<%= f.label :password_confirmation, style: "font-weight:bold" %>
<%= f.password_field :password_confirmation %>

<br>

<%= f.submit style: "float: right;" %>

<%end%>
