<!-- Add user profile pic? -->
<h1><%=@user.name%></h1>
<p>Intensity: <%= User.intensity_level(@user.average_intensity) %></p>
<!-- Following Section -->
<% if @user != current_user %>
  <% if @user.followers.include?(current_user) %>
    <%= link_to "Unfollow", destroy_relationship_path(@user.id), method: :delete%>
  <% else %>
    <%= link_to "Follow", new_relationship_path(@user.id), method: :post%>
  <% end %>
<% end %>

<br>
<%= link_to "#{@user.num_of_followers} followers", followers_path(@user)  %> | <%= link_to "following #{@user.num_of_followees}", followees_path(@user)  %>

<!-- Trips Section -->
<hr>
<h2>Recent Trips</h2>
<% @trips = @user.sort_by_recent_trips(@user.trips) %>
<ul>
<% @trips.each do |trip| %>
  <li><%=link_to trip.title, trip_path(trip) %></li>
    <ul>
      <li>Total Days: <%=trip.trip_duration%> | Intensity: <%=trip.intensity%></li>
      <li>Blurb: <%= trip.blurb %></li>
      <li>Cities:
        <% trip.locations.each do |location| %>
          <%= location.city %>
        <% end %>
      </li>
      <li>Some Destinations:
        <% trip.first_three_destinations.each do |dest| %>
          <%= link_to dest.name, destination_path(dest) %>,
        <% end %>...
      </li>
    </ul>

<% end %>
</ul>
